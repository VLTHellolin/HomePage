main-bg = #16160e
card-bg-1 = rgba(105, 115, 128, .2)
card-bg-2 = #1e1e1e
card-border = 1px solid #3e3e3e
nav-bg = rgba(45, 45, 45, .5)
font-color = #f3f3f3
theme-primary = #bbbcde
theme-accent = #8491c3
theme-gradient = linear-gradient(45deg, #674598, #1e50a2)

@keyframes name_bottom
    0%
        right 100%
    100%
        right 0

body
    display block
    margin 0
    background main-bg
    font-family AR One Sans,ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji

a
    text-decoration none

strong
    color theme-accent

