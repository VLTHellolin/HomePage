.main_container
    color font-color
    margin auto
    padding 2rem
    max-width 1000px
    .title
        font-weight 650
        font-size 1.6rem
    .footnote
        color #616161
        font-size small
    .top
        .top_title
            margin 40px 0 0 0
            font-weight 700
            font-size 3rem
            .my_name
                color theme-primary
                display inline-block
                position relative
                &:before
                    content ''
                    background theme-gradient
                    display block
                    position absolute
                    bottom 5%
                    left 0
                    top 65%
                    z-index -1
                    animation-delay .2s
                    animation-fill-mode forwards
                    animation-duration 1.3s
                    animation-timing-function cubic-bezier(.2, .3, .2, 1)
                    animation-name name_bottom
        .top_info
            margin .2rem 0 2rem 0
    .social_block
        position relative
        display inline-flex
        align-items center
        color font-color
        padding .5rem .8rem
        background card-bg-1
        border-radius 6px
        margin 0 .5rem .6rem .5rem
        transition all .1s linear
        span
            margin-left 4px
    .footer
        color #829292
        text-align center
        font-size 13px
        a
            color font-color
